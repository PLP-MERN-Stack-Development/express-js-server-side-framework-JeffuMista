# Example .env.example for an Express/MERN app
# Copy to .env and replace placeholder values with real secrets.

PORT=3000
NODE_ENV=development

# MongoDB connection (local or cloud URI)
MONGO_URI=mongodb://localhost:27017/your-db-name
# or for Atlas:
# MONGO_URI=mongodb+srv://<dbUser>:<dbPass>@cluster0.mongodb.net/your-db-name?retryWrites=true&w=majority

# JWT / auth
JWT_SECRET=replace_with_a_strong_secret
JWT_EXPIRES_IN=7d

# Session / cookies
SESSION_SECRET=replace_with_session_secret
SALT_ROUNDS=10

# Frontend client URL (for CORS / redirects)
CLIENT_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Logging / misc
LOG_LEVEL=info

# Any third-party API keys (placeholders)
API_KEY=your_api_key_here